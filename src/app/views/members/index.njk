{% extends "layout.njk" %}

{% block content %}

    <div class="card table-container">

        <a href="/members/create">Novo</a>
        
        <table width="100%">
            <thead>                         {# cabeçalho da tabela #}
                <tr>                        {# linha da tabela #}
                    <th>Membro</th>     {# coluna do cabeçalho da tabela #}
                    <th>Email</th>
                    <th>Peso</th>
                    <th>Altura</th>
                    <th>Ação</th>
                </tr>
            </thead> 

            <tbody>                         {# corpo da tabela #}
               
                {% for member in members %}
                    <tr>                        
                        <td>
                            <span style="background-image: url({{ member.avatar_url }})" ></span>
                            {{ member.name }}
                        </td>
                        <td>{{ member.email }}</td>     {# coluna do corpo da tabela #} 
                        <td>{{ member.weight }}kg</td>  {# coluna do corpo da tabela #} 
                        <td>{{ member.height }}cm</td>  {# coluna do corpo da tabela #} 
                        <td><a href="/members/{{ member.id }}">Ver</a></td>             
                    </tr>
               {% endfor %}
               
            </tbody>

        </table>

    </div>

{% endblock content %}