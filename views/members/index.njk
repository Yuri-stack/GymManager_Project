{% extends "layout.njk" %}

{% block content %}

    <div class="card table-container">

        <a href="/members/create">Novo</a>
        
        <table width="100%">
            <thead>                         {# cabeçalho da tabela #}
                <tr>                        {# linha da tabela #}
                    <th>Instructor</th>     {# coluna do cabeçalho da tabela #}
                    <th>Atendimento</th>
                    <th>Ação</th>
                </tr>
            </thead> 

            <tbody>                         {# corpo da tabela #}
               
                {% for instructor in instructors %}
                    <tr>                        
                        <td>
                            <span style="background-image: url({{ instructor.avatar_url }})" ></span>
                            {{ instructor.name }}
                        </td>
                        <td>{{ instructor.services }}</td>  {# coluna do corpo da tabela #} 
                        <td><a href="/instructors/{{ instructor.id }}">Ver</a></td>             
                    </tr>
               {% endfor %}
               
            </tbody>

        </table>

    </div>

{% endblock content %}